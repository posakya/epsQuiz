<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/relative"
            android:layout_width="@dimen/news_image_width"
            android:layout_height="@dimen/news_image_height">

            <ImageView
                android:src="@drawable/splash_screen"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:id="@+id/news_image"
                android:layout_width="@dimen/news_image_width"
                android:layout_height="@dimen/news_image_height"
                android:layout_alignParentStart="true" />
            <ProgressBar
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/colorPrimary"
                android:id="@+id/progressBar"
                />

        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/date_text_size"
                android:text="roshaen"
                android:layout_marginTop="-3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_date"/>

            <TextView
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/date_text_size"
                android:text="roshaen"
                android:layout_marginTop="-5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/news_title"/>

            <TextView
                android:id="@+id/news_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="1.5dp"
                android:maxLines="3"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:text="my name is roshan posakya from birgunj an engineer passed from kathford international college of engineering working at"
                android:textSize="@dimen/date_text_size" />


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>